<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="authentication"
        android:title="@string/pref_title_authentication"/>

    <EditTextPreference
        android:dependency="authentication"
        android:inputType="text"
        android:key="authentication_username"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_authentication_username"/>

    <EditTextPreference
        android:dependency="authentication"
        android:inputType="textPassword"
        android:key="authentication_password"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_authentication_password"/>

</PreferenceScreen>
